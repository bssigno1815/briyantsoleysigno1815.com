  <div id="toast" class="toast">Kopye!</div>
  <script>
    const toast = document.getElementById('toast');
    document.addEventListener('click', async (e)=>{
      const btn = e.target.closest('.copy'); if(!btn) return;
      const email = btn.dataset.email;
      try { await navigator.clipboard.writeText(email); } 
      catch(e){
        const ta=document.createElement('textarea'); ta.value=email; document.body.appendChild(ta);
        ta.select(); document.execCommand('copy'); ta.remove();
      }
      toast.textContent = 'Kopye: ' + email;
      toast.classList.add('show'); setTimeout(()=>toast.classList.remove('show'), 1200);
    });
  </script>
